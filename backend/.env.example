# Environment Configuration for Reconciliation System
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reconciliation
DB_PASSWORD=postgres

# ============================================================================
# AZURE DOCUMENT INTELLIGENCE (REQUIRED)
# ============================================================================
# Get these from Azure Portal > Document Intelligence > Keys and Endpoint
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key-here

# ============================================================================
# AZURE BLOB STORAGE (OPTIONAL - for file storage in cloud)
# ============================================================================
# If not set, files will be stored locally on the server
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=reconciliation-files

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
# Minimum confidence threshold for PDF OCR (0.0 to 1.0)
MIN_PDF_CONFIDENCE=0.75

# Maximum file size in MB
MAX_FILE_SIZE_MB=50

# ============================================================================
# FILE STORAGE (LOCAL)
# ============================================================================
# Where to store uploaded files and generated reports
UPLOAD_DIR=/tmp/reconciliation_uploads
REPORTS_DIR=/tmp/reconciliation_reports

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Set to 'development' for verbose logging
ENVIRONMENT=production
